@using SEDC.PizzaApp.Domain
@model User
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    <table border="0">
        <tr>
            <td>@Html.LabelFor(p => p.FirstName, new { @class = "form-label" })</td>
            <td>@Html.TextBoxFor(p => p.FirstName, new { @class = "form-label" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.LastName, new { @class = "form-label" })</td>
            <td>@Html.TextBoxFor(p => p.LastName, new { @class = "form-label" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.Address, new { @class = "form-label" })</td>
            <td>@Html.TextBoxFor(p => p.Address, new { @class = "form-label" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.Phone, new { @class = "form-label" })</td>
            <td>@Html.TextBoxFor(p => p.Phone, new { @class = "form-label" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.Email, new { @class = "form-label" })</td>
            <td>@Html.TextBoxFor(p => p.Email, new { @class = "form-label" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(p => p.Password, new { @class = "form-label" })</td>
            <td>@Html.TextBoxFor(p => p.Password, new { @class = "form-label" })</td>
        </tr>
    </table>
    <br />
    <input value="Save" type="submit" />
}