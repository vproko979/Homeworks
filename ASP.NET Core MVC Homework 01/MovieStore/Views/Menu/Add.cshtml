@model  MovieModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

@using (@Html.BeginForm("Add", "Menu", FormMethod.Post))
{
    @Html.ValidationSummary()
<table border="0">
    <tr>
        <td>@Html.LabelFor(m => m.Id, new { @class = "form-label" })</td>
        <td>@Html.TextBoxFor(m => m.Id, new { @class = "form-label" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Title, new { @class = "form-label" })</td>
        <td>@Html.TextBoxFor(m => m.Title, new { @class = "form-label" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Genre, new { @class = "form-label" })</td>
        <td>@Html.TextBoxFor(m => m.Genre, new { @class = "form-label" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Year, new { @class = "form-label" })</td>
        <td>@Html.TextBoxFor(m => m.Year, new { @class = "form-label" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Price, new { @class = "form-label" })</td>
        <td>@Html.TextBoxFor(m => m.Price, new { @class = "form-label" })</td>
    </tr>
</table>
    <br />
    <input value="Save" type="submit" />
}