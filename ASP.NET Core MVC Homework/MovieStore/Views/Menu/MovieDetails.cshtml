@model MovieModel
@{
    ViewData["Title"] = "MovieDetails";
}

<h3>Movie Details:</h3>
<br />
<table border="0">
    <tr>
        <td>ID:</td>
        <td><b>@Model.Id</b></td>
    </tr>
    <tr>
        <td>Title:</td>
        <td><b>@Model.Title</b></td>
    </tr>
    <tr>
        <td>Genre:</td>
        <td><b>@Model.Genre</b></td>
    </tr>
    <tr>
        <td>Year:</td>
        <td><b>@Model.Year</b></td>  
    </tr>
    <tr>
        <td>Price:</td>
        <td><b>@Model.Price</b></td>
    </tr>
</table>
<br />
<span><b>@Html.ActionLink("Back", "Movies")</b></span>
